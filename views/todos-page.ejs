<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <title>Todo App</title>
    <style>
      body {
        background-color: #f8f9fa;
      }
      .todo-container {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-top: 50px;
      }
      .todo-item {
        transition: all 0.3s ease;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .todo-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }
      .todo-actions .btn {
        margin-left: 5px;
      }
      .task-id {
        font-weight: bold;
        margin-right: 10px;
        color: #6c757d;
      }
      .add-todo-form {
        margin-bottom: 30px;
      }
    </style>
  </head>
  <body>
    <div class="container todo-container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">My Todo List</h1>
        <a href="/" class="btn btn-outline-primary">
          <i class="fas fa-home"></i> Home
        </a>
      </div>

      <form id="addTodoForm" class="add-todo-form">
        <div class="input-group">
          <input 
            type="text" 
            id="newTodoInput" 
            class="form-control" 
            placeholder="Add a new task..." 
            required
          >
          <div class="input-group-append">
            <button class="btn btn-primary" type="submit">
              <i class="fas fa-plus"></i> Add
            </button>
          </div>
        </div>
      </form>

      <% if (todos && todos.length > 0) { %>
        <ul class="list-group" id="todoList">
          <% todos.forEach(function(todo) { %>
            <li class="list-group-item todo-item" data-id="<%= todo.id %>">
              <div class="d-flex align-items-center">
                <span class="task-id">#<%= todo.id %></span>
                <span class="task-text"><%= todo.task %></span>
              </div>
              <div class="todo-actions">
                <button class="btn btn-sm btn-outline-info edit-btn">
                  <i class="fas fa-edit"></i> Edit
                </button>
                <button class="btn btn-sm btn-outline-danger delete-btn">
                  <i class="fas fa-trash"></i> Delete
                </button>
              </div>
            </li>
          <% }); %>
        </ul>
      <% } else { %>
        <div class="alert alert-info">
          No tasks available. Add your first task above!
        </div>
      <% } %>

      <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Edit Task #<span id="editIdDisplay"></span></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form id="editTodoForm">
                <input type="hidden" id="editTodoId">
                <div class="form-group">
                  <label for="editTodoInput">Task Content</label>
                  <input 
                    type="text" 
                    class="form-control" 
                    id="editTodoInput" 
                    required
                  >
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <button type="button" class="btn btn-primary" id="saveEditBtn">Save Changes</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    
    <script>
      $(document).ready(function() {
        $('#addTodoForm').on('submit', function(e) {
          e.preventDefault();
          const task = $('#newTodoInput').val().trim();
          if (task) {
            $.ajax({
              url: '/todos',
              method: 'POST',
              contentType: 'application/json',
              data: JSON.stringify({ task: task }),
              success: function() {
                location.reload();
              },
              error: function(xhr, status, error) {
                alert('Error adding task: ' + error);
              }
            });
          }
        });

        $(document).on('click', '.delete-btn', function() {
          const todoId = $(this).closest('li').data('id');
          if (confirm('Are you sure you want to delete this task?')) {
            $.ajax({
              url: '/todos/' + todoId,
              method: 'DELETE',
              success: function() {
                location.reload();
              },
              error: function(xhr, status, error) {
                alert('Error deleting task: ' + error);
              }
            });
          }
        });

        $(document).on('click', '.edit-btn', function() {
          const todoItem = $(this).closest('li');
          const todoId = todoItem.data('id');
          const task = todoItem.find('.task-text').text();
          
          $('#editTodoId').val(todoId);
          $('#editIdDisplay').text(todoId);
          $('#editTodoInput').val(task);
          $('#editModal').modal('show');
        });

        $('#saveEditBtn').on('click', function() {
          const todoId = $('#editTodoId').val();
          const task = $('#editTodoInput').val().trim();
          
          if (task) {
            $.ajax({
              url: '/todos/' + todoId,
              method: 'PUT',
              contentType: 'application/json',
              data: JSON.stringify({ 
                task: task
              }),
              success: function() {
                location.reload();
              },
              error: function(xhr, status, error) {
                alert('Error updating task: ' + error);
              }
            });
          }
        });
      });
    </script>
  </body>
</html>